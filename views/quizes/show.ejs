<p><strong>Pregunta:</strong>
  <%= quiz.pregunta %>
</p>
<form class="" action="/quizes/<%= quiz.id %>/answer" method="get">
  <input type="text" name="respuesta" placeholder="Responda aquÃ­">
  <input class="btn btn-primary" type="submit" value="Enviar">
</form>

<div class="new_comment">
  <a href="/quizes/<%= quiz.id %>/comments/new">
    <button class="btn btn-success">Nuevo comentario</button>
  </a>
</div>

<div class="comments">
  <strong>Comentarios:</strong>
</div>
<%for(index in quiz.Comments){%>
  <%if(quiz.Comments[index].publicado || session.user){%>
    <p>-
      <%= quiz.Comments[index].texto %>

      <%if(session.user && !quiz.Comments[index].publicado){%>
        <a href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[index].id %>/publish"><button  class="btn btn-primary" type="button" name="button">Publicar</button></a>
      <%}%>
    </p>
  <%}%>
<%}%>
